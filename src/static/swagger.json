{
  "openapi": "3.0.0",
  "info": {
    "description": "Virus Tracker for Contact Tracing",
    "version": "1.0.0",
    "title": "Virus Tracker"
  },
  "tags": [
    {
      "name": "infected",
      "description": "Detect infected"
    }
  ],
  "paths": {
    "/infected": {
      "post": {
        "tags": [
          "infected"
        ],
        "summary": "Register new infected",
        "operationId": "registerInfected",
        "requestBody": {
          "description": "Visits",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "visits": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "allOf": [
                        {
                          "$ref": "#/components/schemas/Visit"
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Infected registered successfully"
          },
          "400": {
            "description": "Missing fields"
          },
          "409": {
            "description": "Visit not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Visit": {
        "type": "object",
        "properties": {
          "userGeneratedCode": {
            "type": "string",
            "example": "aCodeGenerated"
          },
          "scanCode": {
            "type": "string",
            "example": "aScanCode"
          },
          "timestamp": {
            "type": "string"
          }
        }
      }
    }
  }
}